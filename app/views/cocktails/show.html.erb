<div class = 'banner'>
  <div class = 'banner-text'>
    <h1> <%= @cocktail.name %> </h1>
  </div>
</div>

<div class = 'container'>
  <div class = 'row'>
    <% @cocktail.doses.each do |dose| %>
    <div class = 'col-xs-4'>
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://picsum.photos/300/200/?random" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">
            <%= dose.description %>
            <%= dose.ingredient.name %>
            <%= link_to "Delete this dose", cocktail_dose_path(@cocktail), method: :delete, class: "btn btn-primary" %>
          </h5>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
